@model RepoSystemWeb.Models.CreateUserViewModel

<body class="light-background">
	<div class="container">
		<div class="row justify-content-center lower">
			<div class="col-md-6 register-form-bg rounded-lg">
				<form asp-action="Create" asp-controller="User" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group text-center">
						<h2 class="dark-heading b">Добави служител</h2>
						<br />
						<div asp-validation-summary="All" class="text-danger"></div>
					</div>
					<div class="form-group">
						<label class="control-label dark-heading">Потребителско име</label>
						<input asp-for="Username" class="form-control dark-heading" placeholder="Въведете потребителско име..." />
						<span asp-validation-for="Username" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="control-label dark-heading">Парола</label>
						<input type="password" asp-for="Password" class="form-control dark-heading" placeholder="Въведете паролата..." />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label class="control-label dark-heading">Повтори парола</label>
						<input type="password" asp-for="ConfirmPassword" class="form-control dark-heading" placeholder="Повторете паролата..." />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					<div class="form-group align-items-center text-center pt-3">
						<input style="width: 130px;" type="submit" value="Създай" class="btn btn-lg btn-info rounded btn-font" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>