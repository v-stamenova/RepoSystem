@model RepoSystemWeb.Models.EditUserViewModel

<body class="light-background">
	<div class="container">
		<div class="row justify-content-center lower">
			<div class="col-md-6 register-form-bg rounded">
				<form asp-action="Edit" asp-controller="User" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group text-center">
						<h2 class="dark-heading b">Промяна на паролата</h2>
						<br />
						<div asp-validation-summary="All" class="text-danger"></div>
					</div>
					<div class="form-group">
						<label class="control-label dark-heading">Потребителско име</label>
						<input asp-for="Username" class="form-control dark-heading" readonly />
						<span asp-validation-for="Username" class="text-danger"></span>
					</div>
					<div class="form-group">
						@if (Logged.IsAdmin())
						{
							<label class="control-label dark-heading">Нова парола на потребителя</label>
						}
						else
						{
							<label class="control-label dark-heading">Стара парола</label>
						}
						<input type="password" asp-for="Password" class="form-control dark-heading" placeholder="Въведете парола..." />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						@if (Logged.IsAdmin())
						{
							<label class="control-label dark-heading">Повторете новата парола</label>
						}
						else
						{
							<label class="control-label dark-heading">Нова парола</label>
						}
						<input type="password" asp-for="ConfirmPassword" class="form-control dark-heading" placeholder="Въведете новата парола..." />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					<div class="form-group align-items-center text-center">
						<input type="submit" value="Промяна" class="btn btn-lg btn-info rounded" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>